extends ../layouts/common.pug
block content
    h3 listUsers
    a(href='/users/create') new
    ul 
       each val in user
         li
          
           span=val.name
           span &nbsp;
           a(href='users/profile/'+val.id) view
           span &nbsp;
           a(href='users/delete/'+val.id) delete
           span &nbsp;
           a(href='users/update/'+val.id) update
          
    .center
      .pagination
        a(href='#') &laquo;
        
        a(href='#') &raquo;

    style.
      .center {
      text-align: center;
      }
      .pagination {
      display: inline-block;
      }
      .pagination a {
      color: black;
      float: left;
      padding: 8px 16px;
      text-decoration: none;
      transition: background-color .3s;
      border: 1px solid #ddd;
      margin: 0 4px;
      }
      .pagination a.active {
      background-color: #4CAF50;
      color: white;
      border: 1px solid #4CAF50;
      }
      .pagination a:hover:not(.active) {background-color: #ddd;}

