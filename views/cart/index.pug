
extends ../layouts/common.pug
block content
  link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel='stylesheet')
  link(link rel="stylesheet" ,href="./style/cart.css")
  script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
  script(src='//code.jquery.com/jquery-1.11.1.min.js')
  // ---- Include the above in your HEAD tag --------
  script(src='https://use.fontawesome.com/c560c025cf.js')
  .container
    .card.shopping-cart
      .card-header.bg-dark.text-light
        i.fa.fa-shopping-cart(aria-hidden='true')
        |                 Shipping cart
        a.btn.btn-outline-info.btn-sm.pull-right(href='') Continiu shopping
        .clearfix
      .card-body
        // PRODUCT
        for val in product
          .row
            .col-12.col-sm-12.col-md-2.text-center
              img.img-responsive(src=val.imageBookurl alt='prewiew' width='120' height='80')
            .col-12.text-sm-center.col-sm-12.text-md-left.col-md-6
              h4.product-name
                strong=val.title
              h4
                small=val.description
            .col-12.col-sm-12.text-sm-center.col-md-4.text-md-right.row
              .col-3.col-sm-3.col-md-6.text-md-right(style='padding-top: 5px')
                h6
                  strong
                    | 25.00 
                    span.text-muted x
              .col-4.col-sm-4.col-md-4
                .quantity
                  input.plus(type='button' value='+')
                  input.qty(type='number' step='1' max='99' min='1' value=val.count title='Qty' size='4')
                  input.minus(type='button' value='-')
              .col-2.col-sm-2.col-md-2.text-right
                button.btn.btn-outline-danger.btn-xs(type='button')
                  i.fa.fa-trash(aria-hidden='true')
          hr
        // END PRODUCT
        // PRODUCT
 
        // END PRODUCT
        .pull-right
          a.btn.btn-outline-secondary.pull-right(href='/books')
            | Update shopping cart
      .card-footer
        .coupon.col-md-5.col-sm-5.no-padding-left.pull-left
          .row
            .col-6
              input.form-control(type='text' placeholder='cupone code')
            .col-6
              input.btn.btn-default(type='submit' value='Use cupone')
        .pull-right(style='margin: 10px')
          a.btn.btn-success.pull-right(href='/cart/checkout') Thuê sách 
          .pull-right(style='margin: 5px')
            | Total price: 
            b 50.00&euro;
